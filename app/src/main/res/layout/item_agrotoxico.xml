<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!--region DADOS -->
    <!-- 1. DECLARAÇÃO DAS VARIÁVEIS -->
    <data>

        <variable
            name="agrotoxico"
            type="br.utp.sustentabilidade.models.Agrotoxico" />
    </data>
    <!--endregion DADOS -->

    <!--region LAYOUT -->
    <androidx.cardview.widget.CardView
        android:id="@+id/agrotoxicoCard"
        android:layout_marginStart="@dimen/espaco_pequeno"
        android:layout_marginEnd="@dimen/espaco_pequeno"
        android:layout_marginTop="@dimen/espaco_minusculo"
        android:layout_marginBottom="@dimen/espaco_minusculo"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/espaco_normal"
            android:id="@+id/item_agrotoxico_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/agrotoxicoImgFoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/espaco_pequeno"
                android:layout_marginTop="@dimen/espaco_minusculo"
                android:layout_marginEnd="@dimen/espaco_pequeno"
                android:layout_marginBottom="@dimen/espaco_minusculo"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@{agrotoxico.titulo}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{agrotoxico.descricao}"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btEdita"
                    android:layout_width="@dimen/espaco_gigante"
                    android:layout_height="@dimen/espaco_gigante"
                    android:background="@color/transparent_white"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone"
                    android:text="Editar" />

                <ImageButton
                    android:id="@+id/btExclui"
                    android:layout_width="@dimen/espaco_gigante"
                    android:layout_height="@dimen/espaco_gigante"
                    android:background="@color/transparent_white"
                    android:src="@drawable/ic_delete"
                    android:text="Excluir" />



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--endregion LAYOUT -->

</layout>